{
    "manifest_version": 3,
    "name": "Screen Time Manager",
    "version": "0.1.0",
    "description": "Set per-site time limits and track daily visits + active time.",
    "action": {
        "default_title": "Screen Time Manager",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "tabs"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
        }
    ]
}
