{
    "manifest_version": 3,
    "name": "Screen Time Manager",
    "version": "0.1.0",
    "description": "Set per-site time limits and track daily visits + active time.",
    "action": {
        "default_title": "Screen Time Manager",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "tabs", "alarms"],
    "host_permissions": ["<all_urls>"],

}
